{
  "compilerOptions": {
    "types": [
      "jquery",
      "node"
    ],
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
